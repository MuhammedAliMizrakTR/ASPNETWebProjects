@model IEnumerable<CoreMVCLibraryProject.Models.Entities.Islem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
              Ad Soyad
            </th>
            <th>
                Kitap Adı
            </th>
            <th>
                Alınma Tarihi
            </th>
            <th>
                Teslim Tarihi
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
             @item.Ogrenci.OgrNo - @item.Ogrenci.OgrAd  @item.Ogrenci.OgrSoyad
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kitap.KitapAdi) 
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.ATarih)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VTarih)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IslemNo">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.IslemNo">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.IslemNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
